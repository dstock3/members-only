doctype html
html(lang="en")
    head
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(href="/styles/reset.css" rel="stylesheet" type="text/css")
        link(href="/styles/general.css" rel="stylesheet" type="text/css")
        link(href="/styles/register.css" rel="stylesheet" type="text/css")
        meta(charset="utf-8")
        title Members Only - Register
    body
        header(class="reg-header")
            h1(class="reg-title") Members Only - Register
        main(class="register-page")
            form(class="registerForm" action='' method="POST")
                label(class="reg-username-label" for="username") Username: 
                input(class="reg-username-input" type="text" required name="username")

                if locals.userEx
                    span(class="reg-msg") This username already exists. Please choose another name.
                
                label(class="reg-pw-label" for="password") Password: 
                input(class="reg-pw-input" type="password" required name="password")

                label(class="reg-pwcf-label" for="confirmPassword") Confirm Password: 
                input(class="reg-pwcf-input" type="password" required name="confirmPassword")

                button(class="submit-btn reg-btn") Register
            
            div(class="prompt-container")
                div(class="prompt") Already have an account?
                a(class="prompt-link" href="/login") Log In

            if locals.errors
                ul(class="reg-err")
                    each val in locals.errors
                        li val
    
        footer
            div(class="social-links")
                a(href='https://github.com/dstock3' class="github" target="_blank" rel="noopener noreferrer")= "Github"
                a(href='https://davestockdale.io' class="portfolio" target="_blank" rel="noopener noreferrer")= "Portfolio"