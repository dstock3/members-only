doctype html
html(lang="en")
    head
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(href="/styles/reset.css" rel="stylesheet" type="text/css")
        link(href="/styles/general.css" rel="stylesheet" type="text/css")
        link(href="/styles/admin.css" rel="stylesheet" type="text/css")
        meta(charset="utf-8")
        title Members Only - Error!
    body
        header
            h1(class="title") Members Only
            if locals.user
                nav(class="member-nav")
                    a(href="/admin" class="admin-link selected") Admin
                    a(href="/members" class="members-link") Members
                    a(href="/profile" class="profile-link") Profile
                    a(href="/logout" class="logout-link") Logout
            else
                nav(class="login-nav")
                    a(class="login-link" href="/login") Login
                    a(class="reg-link" href="/register") Register
        main(class="admin-page")
            if !locals.user.admin
                h1(class="admin-form-head") Become an Admin 
                form("class="loginForm" action="" method="POST")
                    label(for="username") username: 
                    input(type="text" name="username")

                    label(for="password") admin password:
                    input(type="password" name="password")

                    button(class="submit-btn") Register
            else
                h1("admin-head") Admin Dashboard

        footer
            div(class="social-links")
                a(href='https://github.com/dstock3' class="github" target="_blank" rel="noopener noreferrer") Github
                a(href='https://davestockdale.io' class="portfolio" target="_blank" rel="noopener noreferrer") Portfolio